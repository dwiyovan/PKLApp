<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TarifActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"
        >
    </include>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berkas yang kan di kirim"
            android:paddingTop="18dp"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="16sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legalisir Ijasah"
                android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/hargaIjasah"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="0"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="15sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legalisir Trankrip Nilai"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/hargaTranskrip"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="101dp"
                android:text="0"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Pengiriman"
        android:paddingTop="18dp"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="16dp"
        android:textColor="@android:color/background_dark">

        <TextView
            android:id="@+id/nama_alumni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Nama Alumni"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp"
            android:textStyle="bold" />



        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/province2_option"
            android:layout_width="381dp"
            android:layout_height="60dp"
            android:hint="Pilih Provinsi"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/city2_option"
            android:layout_width="381dp"
            android:layout_height="60dp"
            android:hint="Pilih Kota"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/almt_compl"
            android:layout_width="381dp"
            android:layout_height="60dp"
            android:hint="AlamatLengkap"
            android:textSize="12sp" />


    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jasa Pengiriman"
            android:paddingTop="18dp"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="16sp"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerJ"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/jasa_kirim"
                />
            <TextView
                android:id="@+id/hargaJasa"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>



    <Button
        android:id="@+id/b_proses"
        android:layout_width="match_parent"
        android:background="@drawable/roundbutton"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:textColor="#fff"/>

</LinearLayout>